@model CreateRequestViewModel
@{
    Layout = "_AdminDashboardLayout";
}
<div class="container-fluid  pb-4">
    <div class="mx-auto pt-3 mb-3 container-sm" id="secondDiv">
        <div class="backbtn d-flex justify-content-between px-3">
            <h4 class="text-body my-auto">Submit Information</h4>
            <button onclick="history.back()"
               class="p-2 border text-decoration-none border-info rounded bg-transparent">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill=#10bce9 class="bi bi-arrow-return-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5" />
                </svg>
                <span class="mx-2 text-info">Back</span>
            </button>
        </div>

        <div id="FormOfPatientRequest" class="container-sm mt-3 p-3 gx-4 mb-3 shadow">
            <form class="form-floating" method="post" enctype="multipart/form-data">
                <!-- Patient Information -->
                <div class="row gx-4">
                    <h4 class="fw-semibold text-body">Patient</h4>

                    <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                        <input type="text"
                               asp-for="firstname"
                               class="form-control border shadow-none"
                               id="floatingInput1"
                               placeholder="First Name" />
                        <label for="floatingInput1" class="ms-2">First Name</label>
                        @*<span asp-validation-for="FirstName" class="text-danger " style="font-size: 11px;"></span>*@
                    </div>
                    <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                        <input type="text"
                               asp-for="lastname"
                               class="form-control border shadow-none"
                               id="floatingInput2"
                               placeholder="Last Name" />
                        <label for="floatingInput2" class="ms-2">Last Name</label>
                        @*<span asp-validation-for="LastName" class="text-danger" style="font-size: 11px;"></span>*@
                    </div>
                    <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                        <input type="tel"
                               asp-for="phoneno"
                               class="form-control border shadow-none"
                               id="floatingInpu5t"
                               placeholder="PhoneNumber" />
                        <label for="floatingInput5" class="ms-2">Mobile Number</label>
                        @*<span asp-validation-for="" class="text-danger" style="font-size: 11px;"></span>*@
                    </div>
                    <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                        <input type="text"
                               asp-for="email"
                               class="form-control border shadow-none"
                               id="email1"
                               placeholder="name@inputtype.com" />
                        <!--onchange="CheckEmail()"-->
                        <label for="floatingInput4" class="ms-2">Email</label>
                        @*<span asp-validation-for="" class="text-danger" style="font-size: 11px;"></span>*@
                    </div>
                    <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                        <input type="date"
                               asp-for="birthDate"
                               max="@DateTime.Now.ToString("yyyy-MM-dd")"
                               min="@DateTime.Now.AddYears(-80).ToString("yyyy-MM-dd")"
                               class="form-control border shadow-none"
                               id="floatingInput3"
                               placeholder="Date Of Birth" />
                        <label for="floatingInput3" class="ms-2">Date Of Birth</label>
                        @*<span asp-validation-for="BirthDate" class="text-danger" style="font-size: 11px;">  </span>*@
                    </div>

                    <!-- Patient Location-->

                    <h4 class="fw-semibold text-body mt-3">
                        Location
                    </h4>
                    <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                        <input type="text"
                               asp-for="street"
                               class="form-control border shadow-none"
                               id="floatingInput6"
                               placeholder="First Name" />
                        <label for="floatingInput6" class="ms-2">Street</label>
                    </div>
                    <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                        <input type="text"
                               asp-for="city"
                               class="form-control border shadow-none"
                               id="floatingInput7"
                               placeholder="Last Name" />
                        <label for="floatingInput7" class="ms-2">City</label>
                    </div>
                    <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                        <select class="form-control border d-flex align-items-center py-2" asp-for="state" name="SelectedStateId">
                            <option>Select State</option>
                            @for (int i = 0; i < Model.regions.Count; i++)
                            {
                                <option value="@Model.regions[i].Regionid">@Model.regions[i].Name</option>
                            }
                        </select>
                    </div>
                    <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                        <input type="text"
                               asp-for="zipcode"
                               class="form-control border shadow-none"
                               id="floatingInput8"
                               placeholder="Last Name" />
                        <label for="floatingInput" class="ms-2">Zip Code</label>
                    </div>
                    <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                        <input type="text"
                               asp-for="lastname"
                               class="form-control border shadow-none"
                               id="floatingInput9"
                               placeholder="Last Name" />
                        <label for="floatingInput9" class="ms-2">Room # / Suite (Optional)</label>

                    </div>
                    <div class="col-sm-12 col-md-12 col-lg-6 form-floating my-3">
                        <button class=" btn btn-outline-info p-3 ">
                            <span class="fs-6">Verify</span>
                        </button>
                        <button class=" btn btn-outline-info p-3 ">
                            <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" class="bi bi-geo-alt-fill" viewBox="0 0 16 16">
                                <path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10m0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6" />
                            </svg>
                            <span class="fs-6">Map</span>
                        </button>
                    </div>

                    <!-- Notes -->

                    <h4 class="fw-semibold text-body mt-3">
                        Notes
                    </h4>
                    <div class="form-floating my-3 control-group col-12">
                        <textarea class="form-control shadow-none"
                                  placeholder="Leave a comment here"
                                  asp-for="adminNotes"
                                  id="floatingTextarea2"
                                  style="height: 120px"></textarea>
                        <label for="floatingTextarea2 control-label" class="ms-2 floating-label">Admin Notes (Optional)</label>
                    </div>
                    <div class="d-flex justify-content-end my-3">
                        <button onclick="return validateInput()" type="submit" class="btn border-none bg-info p-3 text-light fw-semibold me-4" id="submitBtn">
                            Submit
                        </button>
                        <button type="reset" class="btn btn-outline-info p-3 fw-semibold">
                            Cancel
                        </button>
                    </div>
                </div>
            </form>
            @* <div asp-validation-summary="ModelOnly"></div> *@
        </div>
    </div>
</div>
