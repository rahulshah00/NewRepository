@model EditPhysicianViewModel
@{
    Layout = "_AdminDashboardLayout";
}
<div class="container-md co d-flex justify-content-center">
    <div class="col-sm-10 col-12">
        <div class="justify-content-between d-flex mt-4">
            <h4>
                Edit Physician Account
            </h4>
            <button class="btn btn-outline-info align-middle" onclick="history.back(-1)">
                <svg xmlns="http://www.w3.org/2000/svg" fill="#01bce9" width="15" height="15" viewBox="0 -960 960 960">
                    <path d="m142-480 294 294q15 15 14.5 35T435-116q-15 15-35 15t-35-15L57-423q-12-12-18-27t-6-30q0-15 6-30t18-27l308-308q15-15 35.5-14.5T436-844q15 15 15 35t-15 35L142-480Z" />
                </svg>
                <span>Back</span>
            </button>
        </div>
        <div class="shadow-lg p-4 my-3">
            <h5>
                Account Information
            </h5>
            <div>
                <form method="post" id="AccountInfoForm">
                    <div>
                        <div class="row">
                            <div class="col-12 mt-4 col-sm-6 form-floating ">
                                <input asp-for="@Model.PhysicianUsername" type="text" placeholder="User Name" class="form-control" id="Username">
                                <label for="Username" class="ms-2">User Name</label>
                                <span class="validation"></span>
                            </div>
                            <div class="col-12 col-sm-6 mt-4 form-floating  ">
                                <input asp-for="@Model.PhysicianPassword" type="text" placeholder="Password" class="form-control" id="Password">
                                <label for="Password" class="ms-2">Password</label>
                            </div>
                        </div>
                        <div class="row ">
                            <div class="col-12 mt-4 col-sm-6 form-floating ">
                                <div class="form-floating">
                                    <select asp-for="@Model.Status" class="form-select" aria-label="StatusSelectMenu">
                                        <option selected>Status</option>
                                        <option value="1">Pending</option>
                                        <option value="2">Active</option>
                                        <option value="3">Terminated</option>
                                    </select>
                                    <label for="floatingSelect">Status</label>
                                </div>
                            </div>
                            <div class="col-12 col-sm-6 mt-4 form-floating  ">
                                <div class="form-floating">
                                    <select asp-for="@Model.Role" class="form-select" aria-label="RoleSelectMenu">
                                        <option selected>Role</option>
                                        <option value="1">Junior</option>
                                        <option value="2">Senior</option>
                                        <option value="3">Master</option>
                                    </select>
                                    <label for="floatingSelect">Role</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="text-end mt-4">
                        <button class="btn btn-info text-light">Edit</button>
                        <button class="btn btn-info text-light d-none">Submit</button>
                        <button class="btn btn-info text-danger d-none">Cancel</button>
                        <button class="btn btn-outline-info">Reset Password</button>
                    </div>
                </form>
            </div>
            <h5>
                Physician Information
            </h5>
            <form method="post" id="PhysicianInfoForm">
                <div>
                    <div class="row">
                        <div class="col-12 mt-4 col-sm-6 form-floating ">
                            <input type="text" asp-for="FirstName" placeholder="First Name" class="form-control" id="fname">
                            <label for="fname" class="ms-2">First Name</label>
                        </div>
                        <div class="col-12 col-sm-6 mt-4 form-floating  ">
                            <input type="text" asp-for="LastName" placeholder="Last Name" class="form-control" id="Lastname">
                            <label for="Lastname" class="ms-2">Last Name</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-sm-6 mt-4">
                            <div class="form-floating">
                                <input type="email" asp-for="Email" placeholder="Email" class="form-control" id="emailfloat">
                                <label for="emailfloat">Email</label>
                            </div>
                        </div>
                        <div class="col-12 col-sm-6 mt-4 ">
                            <div class="form-floating ">
                                <input id="patient-phone" asp-for="PhoneNo" class="form-control" type="tel" name="phone1" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-sm-6 mt-4  form-floating ">
                            <input type="text" asp-for="@Model.MedicalLicense" placeholder="Medical License" class="form-control" id="MedicalLicense">
                            <label for="MedicalLicense" class="ms-2">Medical License</label>

                        </div>
                        <div class="col-12 col-sm-6 mt-4 form-floating  ">
                            <input type="text" asp-for="@Model.NPINumber" placeholder="NPI Number" class="form-control" id="NPINumber">
                            <label for="NPINumber" class="ms-2">NPI Number</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-sm-6 mt-4 form-floating">
                            <input type="text" asp-for="@Model.SyncEmail" placeholder="Synchronization Email Address" class="form-control" id="SyncEmail">
                            <label for="SyncEmail" class="ms-2">Synchronization Email Address</label>
                        </div>
                        <div class="col-12 col-sm-6 mt-4 form-floating">
                            x<select class="form-select" aria-label="RoleSelectMenu">
                                <option selected disabled>Region</option>
                                @for (int i = 0; i < Model.States.Count; i++)
                                {
                                    
                                        <input type="checkbox" class="checkbox" value="@Model.States[i].Regionid" />
                                        @Model.States[i].Name (@Model.States[i].Abbreviation)
                                }
                            </select>
                        </div>
                    </div>
                    <div class="text-end mt-4">
                        <button class="btn btn-info text-light">Enter Rate</button>
                        <button class="btn btn-outline-info">Edit</button>
                    </div>
                </div>
            </form>
            <h5>
                Mailing & Billing Details
            </h5>
            <div class="row">
                <form method="post">
                    <input hidden />
                    <div class="row">
                        <div class="col-12 col-sm-6 form-floating temp mt-4">
                            <input type="text" class="billingInput form-control inputs border" placeholder="name@example.com">
                            <label for="floatingInput" class="input_labels ms-2">Address 1</label>
                        </div>
                        <div class="col-12 col-sm-6 form-floating temp mt-4">
                            <input type="text" class="billingInput form-control inputs border" placeholder="name@example.com">
                            <label for="floatingInput" class="input_labels ms-2">Address 2</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-sm-6 form-floating temp mt-4">
                            <input type="text" class="billingInput form-control inputs border" placeholder="name@example.com">
                            <label for="floatingInput" class="input_labels ms-2">City</label>
                        </div>
                        <div class="col-12 col-sm-6 form-floating mt-3 temp">
                            <select class="billingInput form-select inputs">
                                <option value="0">Select State</option>
                                <option value="1">Mexico</option>
                                <option value="2">Burma</option>
                                <option value="3">Hawaii</option>
                            </select>
                            <label for="" class="input_labels ms-2">State</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-sm-6 form-floating temp mt-4">
                            <input type="number" class="billingInput form-control inputs border" placeholder="name@example.com">
                            <label for="floatingInput" class="input_labels ms-2">Zip</label>
                        </div>
                        <div class="col-12 col-sm-6 temp mt-4 form-floating d-flex h-100">
                            <input id="phone1" class="billingInput py-3 form-control inputs border" type="tel" />
                        </div>
                    </div>
                    <div class="text-end mt-3">
                        <button type="button" id="BillingEdit" class="btn text-light btn-info mx-1 px-4" onclick="billingEdit()">Edit</button>
                        <button type="submit" id="BillingSubmit" class=" text-light btn btn-info mx-1 d-none">Submit</button>
                        <button type="button" id="BillingCancel" class="btn btn-outline-info text-info mx-1 d-none" onclick="BillingInfoCancel()">Cancel</button>
                    </div>
                </form>
            </div>
            <h5>
                Provider Profile
            </h5>
            <div class="row">
                <form method="post">
                    <input hidden />
                    <div class="row">
                        <div class="col-12 col-sm-6 form-floating temp mt-4">
                            <input type="text" id="BusinessName" class="form-control border" placeholder="Business Name">
                            <label for="BusinessName" class="input_labels ms-2">Business Name</label>
                        </div>
                        <div class="col-12 col-sm-6 form-floating temp mt-4">
                            <input type="text" id="BusinessWebsite" class="form-control border" placeholder="Business Website">
                            <label for="BusinessWebsite" class="input_labels ms-2">Business Website</label>
                        </div>
                    </div>
                    <div class="row align-items-center d-flex">
                        <div class="col-lg-6 col-12 ">
                            <input class=" col-12 col-sm-6 form-control" type="file" id="file_input_id" multiple style="opacity:0;height:0;">
                            <div class="input-group">
                                <input type="text" id="text_input_id" class="py-2 col-12 form-control" placeholder="Select Photo"
                                       style="caret-color: transparent" autocomplete="off" />
                                <span class="input-group-text" id="text_input_span_id " style="background-color: #10bce9;">
                                    <label for="file_input_id" class=" py-2 ms-1 text-white">Upload</label>
                                </span>
                            </div>
                        </div>
                        <div class="col-lg-5 col-10">
                            <input class="col-12 col-sm-4 form-control" type="file" id="file_input_id" multiple style="opacity:0;height:0;">
                            <div class="input-group d-flex">
                                <input type="text" id="text_input_id" class="py-2 col-12 form-control" placeholder="Select File"
                                       style="caret-color: transparent" autocomplete="off" />
                                <span class="input-group-text" id="text_input_span_id " style="background-color: #10bce9;">
                                    <label for="file_input_id" class=" py-2 ms-1 text-white">Upload</label>
                                </span>
                            </div>
                        </div>
                        <div class="col-lg-1 col-2 ps-0">

                            <button class="btn btn-info p-2 mt-3 text-light ms-0">Create</button>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col mt-4 form-floating ">
                            <textarea class="PatientInputs form-control" id="forfloatingtextarea"
                                      placeholder="Enter Brief Details Of Symptoms(Optional)" style="height: 15vh;" cols="20"
                                      rows="5"></textarea>
                            <label for="forfloatingtextarea" class="ms-2">Admin Notes</label>
                        </div>
                    </div>
                    <div class="text-end mt-3">
                        <button type="button" id="BillingEdit" class="btn text-light btn-info mx-1 px-4" onclick="billingEdit()">Edit</button>
                        <button type="submit" id="BillingSubmit" class=" text-light btn btn-info mx-1 d-none">Submit</button>
                        <button type="button" id="BillingCancel" class="btn btn-outline-info text-info mx-1 d-none" onclick="BillingInfoCancel()">Cancel</button>
                    </div>
                </form>
            </div>
            <hr />
            <h5>
                On-boarding
            </h5>
            <div class="mb-3">
                <div class="row align-items-center d-flex">
                    <div class="col-1">
                        <input class="adminInfoInput form-check-input border border-secondary" type="checkbox" style="height:20px; width:20px;">
                    </div>
                    <div class="col-4">
                        <label class="form-check-label" for="flexCheckDefault" style="font-size:18px">Independent Contract Agreement</label>
                    </div>
                    <div class="col-6 form-floating temp mt-3">
                        <div>
                            <button class="btn btn-info text-light "> Upload </button>
                            <button class="btn btn-info text-light "> View </button>
                        </div>
                    </div>
                </div>
                <div class="row align-items-center d-flex">
                    <div class="col-1">
                        <input class="adminInfoInput form-check-input border border-secondary" type="checkbox" style="height:20px; width:20px;">
                    </div>
                    <div class="col-4">
                        <label class="form-check-label" for="flexCheckDefault" style="font-size:18px">Background Check</label>
                    </div>
                    <div class="col-6 form-floating temp mt-3">
                        <div>
                            <button class="btn btn-info text-light "> Upload </button>
                            <button class="btn btn-info text-light "> View </button>
                        </div>
                    </div>
                </div>
                <div class="row align-items-center d-flex">
                    <div class="col-1">
                        <input class="adminInfoInput form-check-input border border-secondary" type="checkbox" style="height:20px; width:20px;">
                    </div>
                    <div class="col-4">
                        <label class="form-check-label" for="flexCheckDefault" style="font-size:18px">HIPAA Compliance</label>
                    </div>
                    <div class="col-6 form-floating temp mt-3">
                        <div>
                            <button class="btn btn-info text-light "> Upload </button>
                            <button class="btn btn-info text-light "> View </button>
                        </div>
                    </div>
                </div>
                <div class="row align-items-center d-flex">
                    <div class="col-1">
                        <input class="adminInfoInput form-check-input border border-secondary" type="checkbox" style="height:20px; width:20px;">
                    </div>
                    <div class="col-4">
                        <label class="form-check-label" for="flexCheckDefault" style="font-size:18px">Non-disclosure Agreement</label>
                    </div>
                    <div class="col form-floating temp mt-3">
                        <div>
                            <button class="btn btn-info text-light "> Upload </button>
                            <button class="btn btn-info text-light "> View </button>
                        </div>
                    </div>
                </div>
                <div class="row align-items-center d-flex">
                    <div class="col-1">
                        <input class="adminInfoInput form-check-input border border-secondary" type="checkbox" style="height:20px; width:20px;">
                    </div>
                    <div class="col-4">
                        <label class="form-check-label" for="flexCheckDefault" style="font-size:18px">License Document</label>
                    </div>
                    <div class="col-6 form-floating temp mt-3">
                        <div>
                            <button class="btn btn-info text-light "> Upload </button>
                            <button class="btn btn-info text-light "> View </button>
                        </div>
                    </div>
                </div>
            </div>
            <hr />
            <div class="text-end">
                <button type="button" id="SaveChanges" class="btn text-white btn-info">Save Changes</button>
                <button type="button" id="DeleteAccount" class="btn btn-danger">Delete Account</button>
            </div>
        </div>
    </div>
</div>

